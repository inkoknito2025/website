<%- include('partials/header') %>

<div class="careers">
  <section class="hero-inner">
    <h1>Join Our Team</h1>
    <p>Be part of something extraordinary</p>
  </section>

  <section class="why-join">
    <h2>Why Work With Us</h2>
    <div class="benefits-grid">
      <div class="benefit-item">
        <h3>Professional Growth</h3>
        <p>Continuous training and development opportunities</p>
      </div>
      <div class="benefit-item">
        <h3>Work-Life Balance</h3>
        <p>Flexible scheduling and competitive time off</p>
      </div>
      <div class="benefit-item">
        <h3>Team Culture</h3>
        <p>Join a passionate team in a creative environment</p>
      </div>
      <div class="benefit-item">
        <h3>Career Development</h3>
        <p>Clear path for advancement and growth</p>
      </div>
    </div>
  </section>

  <section class="current-openings">
    <h2>Current Openings</h2>
    <div class="jobs-grid">
      <div class="job-posting">
        <h3>Chef de Partie</h3>
        <p class="job-type">Full-time</p>
        <ul class="job-requirements">
          <li>Minimum 3 years experience</li>
          <li>Strong culinary background</li>
          <li>Team player mentality</li>
          <li>Creative mindset</li>
        </ul>
        <a href="/contact" class="apply-button">Apply Now</a>
      </div>

      <div class="job-posting">
        <h3>Event Coordinator</h3>
        <p class="job-type">Full-time</p>
        <ul class="job-requirements">
          <li>2+ years event planning experience</li>
          <li>Excellent organizational skills</li>
          <li>Strong communication abilities</li>
          <li>Customer service oriented</li>
        </ul>
        <a href="/contact" class="apply-button">Apply Now</a>
      </div>

      <div class="job-posting">
        <h3>Service Staff</h3>
        <p class="job-type">Part-time / Full-time</p>
        <ul class="job-requirements">
          <li>Previous service experience</li>
          <li>Flexible availability</li>
          <li>Professional appearance</li>
          <li>Team player</li>
        </ul>
        <a href="/contact" class="apply-button">Apply Now</a>
      </div>
    </div>
  </section>

  <section class="application-process">
    <h2>How to Apply</h2>
    <div class="process-steps">
      <div class="step">
        <h3>1. Submit Application</h3>
        <p>Send your CV and motivation letter</p>
      </div>
      <div class="step">
        <h3>2. Initial Interview</h3>
        <p>Meet with our team</p>
      </div>
      <div class="step">
        <h3>3. Practical Assessment</h3>
        <p>Show us your skills</p>
      </div>
      <div class="step">
        <h3>4. Final Interview</h3>
        <p>Discuss the opportunity in detail</p>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>